<%- include("layout/header") -%>

  <div class="max-w-md w-full">
    <div>
      <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">Welcome</h2><a
        class="mt-6 text-center text-1xl leading-9 font-extrabold text-blue-500 block" href="/post">Post a message</a>
    </div>
    <h3 class="mt-6 text-center text-xl leading-9 font-extrabold text-gray-900">Follow someone new</h3>
    <ul class="mt-6">
      <% for (const user of users) { %>
        <li class="text-center text-xl leading-9 font-extrabold text-gray-600">
          <form action="/follow" method="POST">
            <input type="hidden" name="username" value=<%=user %>>
            <button
              class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-blue-600 transition duration-150 ease-in-out hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700"
              type="submit">
              <%= user %>
            </button>
          </form>
        </li>
        <% } %>
    </ul>
  </div>

  <%- include("layout/footer") -%>